---
import blob from '../assets/blob.svg';
import pp from '../assets/pp.png';
---

<section id="home" class="flex-row justify-between items-center section bg-(--background-color) text-white 
border-b-[20px] border-(--border-color)
">
  <div class="flex flex-col gap-5">
    <p class="text-lg">Hi, I'm</p>
    <p class="text-4xl font-bold">Iyan Zuli Armanda</p>
    <p class="text-2xl font-semibold">Informatic Engineering</p>
    <a class="
    bg-white text-(--background-color) py-2 px-4 border-full w-fit border rounded-md
    hover:bg-(--background-color) hover:text-white transition duration-500
    " href="#contact">
      Contact Me
    </a>
  </div>
  <div>
    <div class="right">
      <img src={blob.src} alt="" fetchpriority="high" class=" "/>
      <img src={pp.src} alt="" fetchpriority="high" class="h-auto w-xs" />
    </div>
  </div>
</section>
